@model List<Country>


<div class="row">
    <div class="col-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        <a asp-controller="Countries" asp-action="Create">Create new</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @item.Id
                        </th>
                        <th>
                            @item.Name
                        </th>
                        <th>
                            @item.Code
                        </th>
                        <th>
                            <a asp-controller="countries" asp-action="details" asp-route-id="@item.Id">Details</a>
                            <a asp-controller="countries" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-controller="countries" asp-action="remove" asp-route-id="@item.Id">Remove</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
